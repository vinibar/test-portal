<mvc:View height="100%" controllerName="dev.vinibar.portal.settings.controller.Home" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page showHeader="false">
        <layout:BlockLayout background="Light">
            <layout:BlockLayoutRow>
                <layout:BlockLayoutCell title="Configurações" titleLevel="H1" width="100%">
                    <Text text="Configurações gerais dos arquivos enviados ao BaCen" />
                </layout:BlockLayoutCell>
            </layout:BlockLayoutRow>
            <layout:BlockLayoutRow>
                <layout:BlockLayoutCell width="-1">
                    <core:Icon color="Default" src="sap-icon://course-program" />
                </layout:BlockLayoutCell>
                <layout:BlockLayoutCell titleLevel="H1" width="100%">
                    <layout:titleLink>
                        <Link text="Arquivos" press=".onLinkPress" customData:key="files" />
                    </layout:titleLink>
                    <layout:content>
                        <Text text="Parametrizações dos arquivos enviados ao BaCen" />
                    </layout:content>
                </layout:BlockLayoutCell>
            </layout:BlockLayoutRow>
            <layout:BlockLayoutRow>
                <layout:BlockLayoutCell width="-1">
                    <core:Icon color="Default" src="sap-icon://role" />
                </layout:BlockLayoutCell>
                <layout:BlockLayoutCell>
                    <layout:titleLink>
                        <Link text="Contatos" press=".onLinkPress" customData:key="contacts" />
                    </layout:titleLink>
                    <layout:VerticalLayout>
                        <Text text="Cadastro de Contatos" />
                    </layout:VerticalLayout>
                </layout:BlockLayoutCell>
                <layout:BlockLayoutCell>
                    <layout:titleLink>
                        <Link text="Segmentos" press=".onLinkPress" customData:key="segments" />
                    </layout:titleLink>
                    <layout:content>
                        <Text text="Cadastro de Segmentos" />
                    </layout:content>
                </layout:BlockLayoutCell>
            </layout:BlockLayoutRow>
        </layout:BlockLayout>
        <layout:BlockLayout class="elementAtBottom" background="Light">
            <layout:BlockLayoutRow>
                <layout:BlockLayoutCell titleAlignment="Center" title="Dúvidas?">
                <HBox justifyContent="Center">
                    <FormattedText htmlText="{i18n>duvidas}" />
                </HBox>
                </layout:BlockLayoutCell>
            </layout:BlockLayoutRow>
        </layout:BlockLayout>
    </Page>
</mvc:View>